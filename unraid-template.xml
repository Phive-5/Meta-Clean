<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>(5) Video MetaClean</Name>
  <Repository>docker.io/galvatrondeva/phive-metaclean-docker:latest</Repository>
  <Registry>https://hub.docker.com/r/galvatrondeva/phive-metaclean-docker</Registry>
  <Network>bridge</Network>
  <MyIP></MyIP>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://forums.unraid.net/topic/123456-your-support-thread/</Support>
  <Project>https://github.com/galvatrondeva/phive-metaclean-docker</Project>
  <Overview>A Docker-friendly version of the Video Metadata Cleaner application for Unraid. This tool scans video files for metadata and allows users to clean it as needed via a web interface.</Overview>
  <Category>MediaServer:Tools</Category>
  <WebUI>http://[IP]:[PORT:3000]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/galvatrondeva/phive-metaclean-docker/main/unraid-template.xml</TemplateURL>
  <Icon></Icon>
  <ExtraParams></ExtraParams>
  <PostArgs></PostArgs>
  <CPUset></CPUset>
  <DateInstalled>0</DateInstalled>
  <DonateText>If you find this application useful, consider supporting its development.</DonateText>
  <DonateLink>https://www.paypal.me/yourpaypal</DonateLink>
  <Requires></Requires>
  <Config Name="App Port" Target="3000" Default="3000" Mode="tcp" Description="Port for the web interface" Type="Port" Display="always" Required="true" Mask="false">3000</Config>
  <Config Name="Base Directories" Target="BASE_DIRS" Default="/videos,/media" Mode="" Description="Comma-separated list of base directories for video files (mapped to container paths)" Type="Variable" Display="always" Required="false" Mask="false">/videos,/media</Config>
  <Config Name="Video Directory 1" Target="/videos" Default="/mnt/user/videos" Mode="rw" Description="Path to video directory on Unraid" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/videos</Config>
  <Config Name="Video Directory 2" Target="/media" Default="/mnt/user/media" Mode="rw" Description="Path to another video directory on Unraid" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/media</Config>
</Container>
<!-- NOTE: The Icon field is set to empty, resulting in a default icon in Unraid. For a custom icon, you must host metadata-Icon.png online (e.g., on GitHub) and update the Icon URL. Ensure TemplateURL, Support, Project, and DonateLink point to actual, publicly accessible locations if applicable. -->
